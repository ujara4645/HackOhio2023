@page
@using System.Security.Claims
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model HackOhio2023.Pages.Events.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

@if (User.Identity is { IsAuthenticated: true } && !Model.IsOrganizer)
{
    <form method="post">
        <input asp-for="Event.Id" type="hidden" />
        <input asp-for="HasJoined" type="hidden" />
        <div class="input-group mb-3">
            @if (Model.HasJoined)
            {
                <button class="btn btn-outline-danger" type="submit">Leave</button>
            }
            else
            {
                <button class="btn btn-outline-success" type="submit">Join</button>
            }
        </div>
    </form>
}

